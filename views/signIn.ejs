<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('headcss', {}); %>
        <title>食肉狼注册</title>
        <style>
            .layui-row {
                width: 100%;
                margin: 50px auto;
                text-align: center;
            }

            .login {
                font-size: 20px;
                font-family: '楷体';
            }

            .layui-form-label {
                font-size: 20px;
                font-family: '楷体';
            }

            .layui-form-item {
                margin-left: -100px;
            }

            .text {
                width: 500px;
                margin: 50px auto;
            }

            .layui-input {
                height: 50px;
                margin: 20px;
            }

            .layui-btn {
                width: 150px;
                height: 50px;
                font-size: 20px;
                font-family: '楷体';
                background-color: steelblue;
            }
        </style>
</head>

<body class="layui-bg-black">
    <div class="layui-container">
        <%- include('logo', {}); %>
            <!-- 内容 -->
            <div class="layui-row">
                <!-- 登录 -->
                <div class="login">
                    <h1>注册</h1>
                </div>
                <!-- 登录 end -->
                <!-- 表单 -->
                <div class="text">
                    <form class="layui-form" action="/users/addUser" method="POST">
                        <!-- 用户名 -->
                        <div class="layui-form-item">
                            <label class="layui-form-label">用户名</label>
                            <div class="layui-input-block">
                                <input type="text" name="userName" required placeholder="请创建用户名/账号" class="layui-input">
                            </div>
                        </div>
                        <!-- 用户名 end -->
                        <!-- 密码 -->
                        <div class="layui-form-item">
                            <label class="layui-form-label">输入密码</label>
                            <div class="layui-input-block">
                                <input type="password" name="password" required placeholder="请输入密码" class="layui-input">
                            </div>
                        </div>
                        <!-- 密码 end -->
                        <!-- 密码 -->
                        <div class="layui-form-item">
                            <label class="layui-form-label">确认密码</label>
                            <div class="layui-input-block">
                                <input type="password" name="Cpassword" required placeholder="请确认密码"
                                    class="layui-input">
                            </div>
                        </div>
                        <!-- 密码 end -->
                        <button type="submit" class="layui-btn">注册</button>
                        <button type="reset" class="layui-btn">重置</button>
                    </form>
                </div>
                <!-- 表单 end -->
            </div>
            <!-- 内容 end-->
    </div>
</body>

</html>